@import "materialize";
@import "materialize/extras/nouislider";

/* css style shortcuts */
.full-width {
	width: 100%;
}
.noscrollbar {
	overflow: hidden;
}
.bold {
	font-weight: 600;
}
/* end css style shortcuts */
/* keeps footer at bottom of page */
html,
body {
	margin:0;
	padding:0;
	height:100%;
}
#website-content {
	min-height:100%;
	position:relative;
}
footer {
	width:100%;
	position:absolute;
	left:0;
	display:table;
}
#page-content {
	padding-bottom: 100px;
}
@media only screen and (max-width: 600px) {
	footer {
		bottom: -425px;
		height: 525px;
	}
}
@media only screen and (min-width: 601px) and (max-width: 992px) {
	footer {
		bottom: -385px;
		height: 485px;
	}
}
@media only screen and (min-width: 993px) {
	footer {
		bottom: -150px;
		height: 250px;
	}
}
/* end keeps footer at bottom of page */
.footer{
	&-body {
		display: table-row-group;
	}
	&-content {
		display: table-row;
	}
}
@media only screen and (min-width: 601px) {
	.nav {
		&-info {
			top:0px;
			height:20px;
		}
		&-address {
			color: rgba(255, 255, 255, 0.8);
			height:20px;
			font-size: 14px;
			line-height: 20px;
			& i {
				margin: 0px;
				color: rgba(255, 255, 255, 0.8);
				font-size: 14px!important;
				line-height: 20px!important;
			}				
		}
		&-phone {
			color: rgba(255, 255, 255, 0.8);
			height:20px;
			font-size: 14px;
			line-height: 20px;
			& i {
				margin: 0px;
				color: rgba(255, 255, 255, 0.8);
				font-size: 14px!important;
				line-height: 20px!important;
			}			
		}
	}
}

.hdr {
	&-mob {
		&-img{
			width: 44px;
			margin: 6px;
		}
		&-txt{
			margin: 10px 0px 0px 6px;
			color: #757575;
			font-size: 14px;
			height: 14px;
			line-height: 14px;
		}
		&-phn{
			margin: 3px 0px 0px 6px;
			color: #2e7d32;
			font-size: 21px;
			height: 21px;
			line-height: 21px;
			& i {
				margin: 0px;
				color: #2e7d32;
				font-size: 21px!important;
				height: 21px!important;
				line-height: 21px!important;
			}
		}
	}
}

#root-intro {
	height: 600px;
	background: url(<%= asset_path('root.jpg') %>) no-repeat center center scroll;
	background-size: cover;
}
@media screen and (min-width: 624px) {
	.big-search-button {
		display:none;
	}
}
@media screen and (max-width: 623px) {
	.intro-search {
		display:none;
	}
	.intro-content {
		height: 600px;
	}	
}
@media screen and (min-width: 588px) {
	#root-intro {
		margin-top: -64px;
	}
}
@media screen and (max-width: 587px) {
	#root-intro {
		margin-top: -56px;
	}
	.intro {
		&-section {
			padding: 10px 0px;
		}
	}			
}
.big-search-btn {
	width: 100%;
	max-width: 460px;
}		
.intro {
	&-content {
		height: 500px;
	}
	&-text {
		color: white;
    	text-shadow: 2px 2px 4px #000000;
	}	
	&-btn {
		min-width: 130px;
		max-width: 460px;
		margin-top: 8px;
	}
	&-section {
		padding: 20px 0px;
	}		
	&-padding {
		height: 120px;
		width: 100%;
	}	
	&-search {
		height: 100px;
		background: rgba(55,71,79,0.5);
		&-card {
			margin: 0;
			padding: 6px 0px 0px 0px;
			background: rgba(255,255,255,0.75);
		}
		&-btn {
			margin: 0px 0px 7px 0px;
		}
		&-table {
			width: 100%;
			margin: 0;
		}		
		&-cell {
			&-1 {
				text-align: center;
				padding: 0px 7px;
				width: 38%;
			}
			&-2 {
				text-align: center;
				padding: 0px 7px;
				width: 25%;
			}	
			&-3 {
				text-align: center;
				padding: 0px 7px;
				width: 26%;
			}	
			&-4 {
				text-align: center;
				padding: 0px 7px;
				width: 11%;
			}								
		}								
	}		
}
.padding {
	&-0 {
		padding: 0;
	}
}
.margin {
	&-0 {
		margin: 0;
	}
}